%h2 Reset your password
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, novalidate: false }) do |f|
  .form-inputs
    = f.input :email,
      required: true,
      input_html: { autocomplete: "email" }
  .form-actions
    = f.button :submit, "Send password reset email", class: 'btn-success btn-block btn-lg mb-2'
