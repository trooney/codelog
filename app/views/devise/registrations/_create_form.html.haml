= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { novalidate: false }) do |f|
  .form-inputs
    = f.input :full_name,
                required: true,
                label: false,
                input_html: { placeholder: 'Full Name', html5: true }
    = f.input :email,
                required: true,
                label: false,
                input_html: { placeholder: 'Email'}
    = f.input :password,
                required: true,
                label: false,
                input_html: { autocomplete: "new-password", placeholder: 'Password' }
  = f.button :submit, "Sign up", id: 'sign-up-submit', class: 'btn-success btn-block btn-lg mb-2'
  .text-center
    Already have an account?
    = link_to "Sign In", new_session_path(resource_name)