- alert_mappings = { error: 'alert-danger', alert: 'alert-danger', default: 'alert-warning'}

- flash.each do |type, message|
  - alert_class = alert_mappings.key?(type.to_sym) ? alert_mappings[type.to_sym] : alert_mappings[:default]

  .alert.alert-top-page{ class: alert_class, "onclick" => "javascript:this.parentNode.removeChild(this)" }
    .ml-auto.mr-auto
      = simple_format(message, {}, wrapper_tag: 'span' )
    %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
